<%- include("../partials/header.ejs"); %>

<div class="container">
	<header class="jumbotron">
		<div class="container">
			<h1>Welcome to YelpCamp</h1>
			<p>View thousands of campgrounds from all over the world</p>
			<p>
				<a class="btn btn-primary btn-lg" href="/">Back to landing page</a>
				<a class="btn btn-primary btn-lg" href="/campgrounds/new">Add a New Campground</a>
			</p>
		</div>
	</header>

	<!-- display is a temp fix maybe text not center -->
	<div class="row text-center" style="display:flex; flex-wrap: wrap;">
		<% for (var i = 0; i < campgrounds.length; i++) { %>
		<div class="col-md-3 col-sm-6">
			<div class="thumbnail">
				<img src="<%= campgrounds[i].img %>">
				<div class="caption">
					<h4><%= campgrounds[i].name %></h4>
					<h4><%= campgrounds[i].description %></h4>
					<!-- Want a form here to send id to SHOW route -->
					<% var action = "/campgrounds/" + campgrounds[i]._id; %>
					<form action=<%=action%> method="GET">
						<input class="btn btn-primary btn-sm" type="submit" value="See more info about <%= campgrounds[i].name %>">
						<!-- <a href=<%= action %> class="btn btn-primary btn-sm" type="submit">See more info about <%= //campgrounds[i]["name"] %></a> -->

					</form>
				</div>
			</div>
			
		</div>
		<% } %>
		
	</div>
</div>

<%- include("../partials/footer.ejs"); %>

