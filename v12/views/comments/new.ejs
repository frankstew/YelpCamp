<%- include("../partials/header.ejs"); %>

<div class="container">
	<div class="row">
		<h1 style="text-align: center" class="title-font against-background">Add a New Comment to <%= campground.name %></h1>
		<div style="width: 30%; margin: 35px auto;">
			<form action="/campgrounds/<%= campground._id %>/comments" method="POST">
				<div class="form-group">
					<textarea class="form-control" type="text" name="comment[text]" required></textarea>
				</div>
				
				<button class="btn btn-lg btn-primary btn-block title-font">
					Add comment
				</button>
			</form>
			<a href="/campgrounds/<%= campground._id %>" class="secondary-font">Go back</a>
		</div>
	</div>
</div>

<%- include("../partials/footer.ejs"); %>