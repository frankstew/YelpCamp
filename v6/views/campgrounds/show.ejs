<%- include("../partials/header.ejs"); %>


<a class="btn btn-default" href="/campgrounds">Back to campgrounds</a>
<div class="container">
	<div class="row">
		<div class="col-md-3">
			<p class="lead">YelpCamp</p>
			<div class="list-group">
				<li class="list-group-item active">infor 1</li>
				<li class="list-group-item">infor 1</li>
				<li class="list-group-item">infor 1</li>
			</div>
		</div>
		<div class="col-md-9">
			<div class="thumbnail">
				<img class="image-responsive" src="<%= campground.img %>">
				<div class="caption-full">
					
					<h4 class="pull-right">$9.00/night</h4>
					<h4><a href=""><%= campground.name %></a></h4>
					<p><%= campground.description; %></p>
				</div>
			</div>
			<div class="well">
				<div class="text-right">
					<a  class="btn btn-success" href="/campgrounds/<%= campground._id %>/comments/new">Leave a review</a>
				</div>
				<hr>
				<%for (var i = 0; i < campground.comments.length; i++) { %>
					<div class="row">
						<div class="col-md-12">
							<strong><%= campground.comments[i].author %></strong>
							<span class="pull-right">10 days ago</span>
							<p><%= campground.comments[i].text %></p>
						</div>
					</div>
					<h3>
						
					</h3>

					
				<% } %>
			</div>
			
			
		</div>
	</div>
	

</div>


<%- include("../partials/footer.ejs"); %>
