<%- include("../partials/header.ejs"); %>

<div class="container">
	<div class="row">
		<h1 style="text-align: center">Add a New Campground</h1>
		<div style="width: 30%; margin: 35px auto;">
			<form action="/campgrounds" method="POST">
				<div class="form-group">
					<input class="form-control" type="text" name="CampgroundName" placeholder="Add a new Campground" required>
				</div>

				<div class="form-group">
						<input class="form-control" type="number" name="CampgroundPrice" placeholder="price" min="0.01" step="0.01" required>
				</div>

				<div class="form-group">
					<input class="form-control" type="text" name="CampgroundImage" placeholder="image url" required>
				</div>
				
				<div class="form-group">
					<input class="form-control" type="text" name="CampgroundDescription" placeholder="Description" required>
				</div>
				
				<button class="btn btn-lg btn-primary btn-block">
					Add Campground!
				</button>
			</form>
			<a href="/campgrounds">Go back</a>
		</div>
	</div>
</div>

<%- include("../partials/footer.ejs"); %>